{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "outDir": "./dist/main",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./packages/service" },
    { "path": "./packages/plugin" },
    { "path": "./packages/global" }
  ],
  "exclude": ["unocss.config.ts"]
}
